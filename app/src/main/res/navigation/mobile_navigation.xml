<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.lumos.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_collection"
        android:name="com.example.lumos.ui.collection.CollectionFragment"
        android:label="Collection"
        tools:layout="@layout/fragment_collection" />

    <fragment
        android:id="@+id/navigation_review"
        android:name="com.example.lumos.ui.review.ReviewFragment"
        android:label="Review"
        tools:layout="@layout/fragment_review" />

    <fragment
        android:id="@+id/navigation_info"
        android:name="com.example.lumos.ui.info.InfoFragment"
        android:label="Info"
        tools:layout="@layout/fragment_info" />

</navigation>